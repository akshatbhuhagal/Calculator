<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00b8d4"
    tools:context=".MainActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="250sp"
        app:cardCornerRadius="30sp"
        app:cardElevation="4sp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0088a3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvResult"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:hint="Result"
                    android:maxLength="14"
                    android:paddingTop="140sp"
                    android:paddingRight="40sp"
                    android:textSize="50sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="250sp"
        android:background="#6d7482"
        android:columnCount="4"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintVertical_weight="1">

        <Button
            android:id="@+id/clearTxt"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:backgroundTint="#6d7482"
            android:onClick="onClear"
            android:text="C"
            android:textColor="#18ffff"
            android:textSize="20sp"
            android:textStyle="bold">

        </Button>

        <Button
            android:id="@+id/deleteTxt"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#6d7482"
            android:onClick="onDelete"
            android:text="Del"
            android:textColor="#18ffff"
            android:textSize="20sp"
            android:textStyle="bold">

        </Button>

        <Button
            android:id="@+id/percentBtn"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:backgroundTint="#6d7482"
            android:onClick="onOperator"
            android:text="%"
            android:textColor="#18ffff"
            android:textSize="20sp"
            android:textStyle="bold">

        </Button>

        <Button
            android:id="@+id/DivideBtn"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:backgroundTint="#6d7482"
            android:onClick="onOperator"
            android:text="รท"
            android:textColor="#18ffff"
            android:textSize="20sp"
            android:textStyle="bold">

        </Button>

        <Button
            android:id="@+id/number7Btn"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:backgroundTint="#6d7482"
            android:onClick="onDigit"
            android:text="7">

        </Button>

        <Button
            android:id="@+id/number8Btn"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#6d7482"
            android:onClick="onDigit"
            android:text="8">

        </Button>

        <Button
            android:id="@+id/number9Btn"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:backgroundTint="#6d7482"
            android:onClick="onDigit"
            android:text="9">

        </Button>

        <Button
            android:id="@+id/multiplyBtn"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:backgroundTint="#6d7482"
            android:onClick="onOperator"
            android:text="x"
            android:textColor="#18ffff"
            android:textSize="20sp"
            android:textStyle="bold">

        </Button>

        <Button
            android:id="@+id/number4Btn"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:backgroundTint="#6d7482"
            android:onClick="onDigit"
            android:text="4">

        </Button>

        <Button
            android:id="@+id/number5Btn"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#6d7482"
            android:onClick="onDigit"
            android:text="5">

        </Button>

        <Button
            android:id="@+id/number6Btn"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:backgroundTint="#6d7482"
            android:onClick="onDigit"
            android:text="6">

        </Button>

        <Button
            android:id="@+id/minusBtn"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:backgroundTint="#6d7482"
            android:onClick="onOperator"
            android:text="-"
            android:textColor="#18ffff"
            android:textSize="20sp"
            android:textStyle="bold">

        </Button>

        <Button
            android:id="@+id/number1Btn"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:backgroundTint="#6d7482"
            android:onClick="onDigit"
            android:text="1">

        </Button>

        <Button
            android:id="@+id/number2Btn"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#6d7482"
            android:onClick="onDigit"
            android:text="2">

        </Button>

        <Button
            android:id="@+id/number3Btn"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:backgroundTint="#6d7482"
            android:onClick="onDigit"
            android:text="3">

        </Button>

        <Button
            android:id="@+id/plusBtn"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:backgroundTint="#6d7482"
            android:onClick="onOperator"
            android:text="+"
            android:textAllCaps="false"
            android:textColor="#18ffff"
            android:textSize="20sp"
            android:textStyle="bold">

        </Button>

        <Button
            android:id="@+id/number00Btn"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:backgroundTint="#6d7482"
            android:onClick="onDigit"
            android:text="00">

        </Button>

        <Button
            android:id="@+id/number0Btn"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#6d7482"
            android:onClick="onDigit"
            android:text="0">

        </Button>

        <Button
            android:id="@+id/dotBtn"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:backgroundTint="#6d7482"
            android:onClick="onDecimalDot"
            android:text=".">

        </Button>

        <Button
            android:id="@+id/isequaltoBtn"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:backgroundTint="#6d7482"
            android:onClick="onEqual"
            android:text="="
            android:textColor="#18ffff"
            android:textSize="20sp"
            android:textStyle="bold">

        </Button>


    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>