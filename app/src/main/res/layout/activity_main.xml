<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="250sp"
            android:paddingTop="180sp"
            android:gravity="right"
            android:hint="Result"
            android:textSize="50sp"
            android:textStyle="bold"
            android:maxLength="14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>


        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="250sp"
            android:columnCount="4"
            android:rowCount="5"
            android:background="#6d7482"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvResult">

                <Button
                    android:id="@+id/clearTxt"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#18ffff"
                    android:layout_row="0"
                    android:backgroundTint="#6d7482"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:text="C"
                    android:onClick="onClear">

                </Button>

                <Button
                    android:id="@+id/deleteTxt"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#18ffff"
                    android:layout_row="0"
                    android:backgroundTint="#6d7482"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:text="Del"
                    android:onClick="onDelete">

                </Button>

                <Button
                    android:id="@+id/percentBtn"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#18ffff"
                    android:layout_row="0"
                    android:backgroundTint="#6d7482"
                    android:layout_rowWeight="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:text="%"
                    android:onClick="onOperator">

                </Button>

                <Button
                    android:id="@+id/DivideBtn"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#18ffff"
                    android:layout_row="0"
                    android:backgroundTint="#6d7482"
                    android:layout_rowWeight="1"
                    android:layout_column="3"
                    android:layout_columnWeight="1"
                    android:text="รท"
                    android:onClick="onOperator">

                </Button>

                <Button
                    android:id="@+id/number7Btn"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_row="1"
                    android:backgroundTint="#6d7482"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:text="7"
                    android:onClick="onDigit">

                </Button>

                <Button
                    android:id="@+id/number8Btn"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_row="1"
                    android:backgroundTint="#6d7482"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:text="8"
                    android:onClick="onDigit">

                </Button>

                <Button
                    android:id="@+id/number9Btn"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_row="1"
                    android:backgroundTint="#6d7482"
                    android:layout_rowWeight="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:text="9"
                    android:onClick="onDigit">

                </Button>

                <Button
                    android:id="@+id/multiplyBtn"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#18ffff"
                    android:layout_row="1"
                    android:backgroundTint="#6d7482"
                    android:layout_rowWeight="1"
                    android:layout_column="3"
                    android:layout_columnWeight="1"
                    android:text="x"
                    android:onClick="onOperator">

                </Button>

                <Button
                    android:id="@+id/number4Btn"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_row="2"
                    android:backgroundTint="#6d7482"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:text="4"
                    android:onClick="onDigit">

                </Button>

                <Button
                    android:id="@+id/number5Btn"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_row="2"
                    android:backgroundTint="#6d7482"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:text="5"
                    android:onClick="onDigit">

                </Button>

                <Button
                    android:id="@+id/number6Btn"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_row="2"
                    android:backgroundTint="#6d7482"
                    android:layout_rowWeight="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:text="6"
                    android:onClick="onDigit">

                </Button>

                <Button
                    android:id="@+id/minusBtn"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#18ffff"
                    android:layout_row="2"
                    android:backgroundTint="#6d7482"
                    android:layout_rowWeight="1"
                    android:layout_column="3"
                    android:layout_columnWeight="1"
                    android:text="-"
                    android:onClick="onOperator">

                </Button>

                <Button
                    android:id="@+id/number1Btn"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_row="3"
                    android:backgroundTint="#6d7482"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:text="1"
                    android:onClick="onDigit">

                </Button>

                <Button
                    android:id="@+id/number2Btn"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_row="3"
                    android:backgroundTint="#6d7482"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:text="2"
                    android:onClick="onDigit">

                </Button>

                <Button
                    android:id="@+id/number3Btn"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_row="3"
                    android:backgroundTint="#6d7482"
                    android:layout_rowWeight="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:text="3"
                    android:onClick="onDigit">

                </Button>

                <Button
                    android:id="@+id/plusBtn"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#18ffff"
                    android:layout_row="3"
                    android:backgroundTint="#6d7482"
                    android:layout_rowWeight="1"
                    android:layout_column="3"
                    android:layout_columnWeight="1"
                    android:text="+"
                    android:textAllCaps="false"
                    android:onClick="onOperator">

                </Button>

                <Button
                    android:id="@+id/number00Btn"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_row="4"
                    android:backgroundTint="#6d7482"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:text="00"
                    android:onClick="onDigit">

                </Button>

                <Button
                    android:id="@+id/number0Btn"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_row="4"
                    android:backgroundTint="#6d7482"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:text="0"
                    android:onClick="onDigit">

                </Button>

                <Button
                    android:id="@+id/dotBtn"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_row="4"
                    android:backgroundTint="#6d7482"
                    android:layout_rowWeight="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:text="."
                    android:onClick="onDecimalDot">

                </Button>

                <Button
                    android:id="@+id/isequaltoBtn"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#18ffff"
                    android:layout_row="4"
                    android:backgroundTint="#6d7482"
                    android:layout_rowWeight="1"
                    android:layout_column="3"
                    android:layout_columnWeight="1"
                    android:text="="
                    android:onClick="onEqual">

                </Button>


        </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>